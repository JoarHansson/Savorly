generator client {
  provider = "prisma-client-js"
}

datasource db {
  // as of now, use sqlite for local development
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recipe {
  id     Int    @id @default(autoincrement())
  title  String
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model User {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String
  posts Recipe[]
}
